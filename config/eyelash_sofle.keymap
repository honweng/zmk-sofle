        layer_0_qwerty {
            bindings = <
&kp ESC     &kp N1        &kp N2        &kp N3          &kp N4         &kp N5         &kp UP_ARROW     &kp N6         &kp N7         &kp N8          &kp N9      &kp N0         &kp BACKSPACE 
&kp TAB     &kp Q         &kp W         &kp E           &kp R          &kp T          &kp DOWN_ARROW   &kp Y          &kp U          &kp I           &kp O       &kp P          &kp BACKSLASH
&u_sc       &kp A         &kp S         &hm_sl LSHFT D  &hm_l LCTRL F  &kp G          &kp LEFT_ARROW   &kp H          &hm_r RCTRL J  &hm_sr RSHFT K  &kp L       &kp SEMICOLON  &kp SQT
&kp LCTRL   &kp Z         &kp X         &kp C           &kp V          &kp B          &kp RIGHT_ARROW  &kp N          &kp M          &kp COMMA       &kp PERIOD  &kp SLASH      &kp ENTER
&kp C_MUTE  &kp LGUI      &kp LALT      &kp GRAVE       &u_lt 3 DEL    &u_lt 2 SPACE  &kp ENTER        &u_lt 1 SPACE  &u_lt 4 ENTER  &kp MINUS       &kp EQUAL   &kp RSHFT             
